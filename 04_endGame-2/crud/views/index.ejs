<%- include('Layout/header') %>



    <div class="container">
        <div class="row justify-content-center mt-3 " style="border-radius: 10px; height: 80vh;">
            <div class="col-lg-12  ">

                <% if (message){ %>
                    <div class="alert alert-<%= message.type %> alert-dismissible fade show" role="alert">
                        <strong>
                            <%= message.message %>
                        </strong>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <% } %>


                        <% if(users.length >    0 ){ %>

                            <table class="table shadow-sm table-hover">

                                <thead>
                                    <tr class="table-dark">
                                        <th scope="col">ID</th>
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">E-Mail</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% users.forEach((element,index)=>{ %>
                                        <tr>
                                            <th scope="row"><%= index %></th>
                                            <td><img src="../uploads/<%= element.image %>"  class="object-fit-cover rounded overflow-hidden img-fluid" alt="" srcset="" width="70px"></td>
                                            <td><%= element.name %></td>
                                            <td><%= element.email %></td>
                                            <td><%= element.phone %></td>
                                            <td class="flex justify-content-between">
                                                <a href="/edit/<%= element._id %>" class="btn-success btn text-decoration-none mx-2">
                                                    <i class="fa-solid fa-pen-to-square"></i>
                                                </a><a href="/delete/<%= element._id %>" class="btn-danger btn text-decoration-none ">
                                                    <i class="fa-solid fa-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        <% }) %>

                                </tbody>
                            </table>
                            <% } else {%>

                                <div class="p-5 text-center bg-body-tertiary rounded-3">
                                    <svg class="bi mt-4 mb-3" style="color: var(--bs-indigo);" width="100" height="100">
                                        <use xlink:href="#bootstrap"></use>
                                    </svg>
                                    <h1 class="text-body-emphasis">No Data Found</h1>
                                    <p class="col-lg-8 mx-auto fs-5 text-muted">
                                        First Add Data
                                    </p>
                                    <a href="/add" class="btn btn-dark">Add Data</a>

                                </div>
                                <% } %>
            </div>
        </div>
    </div>
    <%- include('Layout/footer') %>